{
  "extends": [
    "airbnb"
  ],
  "root": true,
  "env": {
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": [1, {
      "allow": ["error", "info", "warn"]
    }],
    "max-len": ["error", 120],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": "error",
    "semi": ["off"]
  }
}